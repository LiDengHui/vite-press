{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "useDefineForClassFields": true,
    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Linting */
  },
  "include": [
    "src/*"
  ]
}